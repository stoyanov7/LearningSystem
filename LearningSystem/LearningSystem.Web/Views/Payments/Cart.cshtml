@model IEnumerable<LearningSystem.Models.Payment>

@{
    ViewData["Title"] = "Cart";
}

@if (Model == null)
{
    <div>Nothing to see here...</div>
}
else
{
    <form asp-area="" asp-controller="Payments" asp-action="Checkout" method="post">
        @foreach (var payment in Model)
        {
            <div>@payment.CourseId | @payment.Amount</div>
        }
        <div class="form-group">
            <div class="col-sm-10 col-sm-push-2">
                <input type="submit" value="Checkout" class="btn btn-success" />
            </div>
        </div>
    </form>
}