@model LearningSystem.Web.Areas.Blog.Models.BlogArticleViewModel

@{
    ViewData["Title"] = "Delete article";
}

<h2>@ViewData["Title"]</h2>
<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: '#Content',
        readonly: 1
    });
</script>
<div class="row">
    <div class="col-md-8">
        <form asp-area="Blog" asp-controller="Articles" asp-action="DeleteConfirm" asp-route-id="@Model.Id" method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" readonly="readonly" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea readonly asp-for="Content" rows="30" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href='javascript:history.go(-1)'>Back</a>
        </form>
    </div>
</div>