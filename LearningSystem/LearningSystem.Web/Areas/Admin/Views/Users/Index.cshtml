@model IEnumerable<AllUsersViewModel>

@{
    ViewData["Title"] = "All Users";
}

<main>
    <h1 class="title-center">@ViewData["Title"]</h1>
    @if (!Model.Any())
    {
        <div class="card mt-5">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h4>@ViewData["Title"]</h4>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row justify-content-center text-center">
                    <div class="col-12 col-md-10 mt-5">
                        <i class="fa fa-user fa-5x"></i>
                        <h2>No Users yet.</h2>
                        <p class="text-muted">
                            You do not have any users yet.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container">
            <div class="row">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Add to role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.DisplayForModel()
                    </tbody>
                </table>
            </div>
        </div>
    }
</main>