@model LearningSystem.Web.Areas.Admin.Models.User.AllUsersViewModel

<tr>
    <td>@Model.Username</td>
    <td>@Model.Email</td>
    <td>
        <form asp-area="Admin" asp-controller="Users" asp-action="AddToRole" method="post">
            <div class="row">
                <div class="col-md-9">
                    <input type="hidden" name="UserId" value="@Model.Id" />
                    <select name="Role" asp-items="Model.Roles" class="form-control"></select>
                </div>
                <div class="col-md-3">
                    <input class="btn btn-sm btn-primary" type="submit" value="Add To Role" />
                </div>
            </div>
        </form>
    </td>
    <td>
        <a asp-area="Admin"
           asp-controller="Users"
           asp-action="Details"
           asp-route-id="@Model.Id"
           class="btn btn-default">Details</a>
    </td>
</tr>