@model EditCourseInstanceBindingModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit instance @Model.Name</h2>
<form asp-area="Lecturer" asp-controller="CourseInstances" asp-action="Edit" asp-route-id="@Model.Id">
    @Html.EditorForModel()
    <div class="form-group row">
        <div class="col-sm-10 col-sm-push-2">
            <input type="submit" value="Edit" class="btn btn-success" />
            <a href="javascript:history.go(-1)">Back</a>
        </div>
    </div>
</form>